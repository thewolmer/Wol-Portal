{
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.fontSize": 15,
  "editor.wordWrap": "on",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.accessibilitySupport": "off",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "editor.mouseWheelZoom": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "explorer.confirmDelete": false,
  "code-runner.runInTerminal": true,
  "diffEditor.ignoreTrimWhitespace": false,

  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Hacker",

  "editor.fontFamily": "Consolas, 'Courier New', monospace",
  "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font",

  // Eslint

  "eslint.run": "onSave",
  "eslint.lintTask.enable": true,
  "eslint.alwaysShowStatus": true,
  "eslint.validate": ["javascript", "typescript", "javascriptreact", "html", "typescriptreact", "vue", "css"],

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // git

  "git.confirmSync": true,
  "git.autofetch": true,

  // Emmit
  "emmet.includeLanguages": {
    "postcss": "css"
  },
  // discord presence
  "discord.removeDetails": true,
  "discord.removeRemoteRepository": true,
  // vue
  "vetur.format.defaultFormatter.js": "prettier-eslint",
  "vetur.format.defaultFormatter.ts": "prettier-tslint",
  "vetur.validation.templateProps": true,
  // cSpell
  "cSpell.userWords": ["axios", "scroller"],
  // prettier
  "prettier.configPath": ".prettierrc.js",
  "prettier.jsxSingleQuote": true,
  // "prettier.singleAttributePerLine": true,
  "prettier.endOfLine": "auto",
  "prettier.tabWidth": 2,
  "prettier.printWidth": 120,
  "prettier.semi": true,
  "prettier.bracketSpacing": true,
  "prettier.trailingComma": "all",
  "prettier.singleQuote": true,
  "prettier.vueIndentScriptAndStyle": true
}
